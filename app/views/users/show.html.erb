<main>
    <% flash.each do |message_type, message| %>
       <p id="notice">
        <%= message %>
        </p>
    <% end %>
      <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
      <%= render 'books/list',user: @user, book: @book %>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <% @books.each do |book| %>
                <td>
                  <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "img/no_image.jpg", size: "40x40" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book.title, book_path(book.id) %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
              <% end %>
              <%= paginate @books %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
